#appwrapper	#application #sidebar-container > section
	display inline-block
	position fixed
	top 0
	left 0
	height 75%
	max-height 600px
	width 250px
	background white
	border-bottom-right-radius 2px
	border #ccc
	border-left none
	border-top none
	box-shadow -1px 1px 5px rgba(0, 0, 0, 0.4)
	transition all 1s ease-in-out
	transform translateX(-100%)
	z-index 9
	*
		z-index 2
	aside
		position absolute
		right -48px
		top 0
		width 47px
		height 47px
		background white
		font-size 14pt
		line-height 47px
		text-align center
		border-left solid 1px rgba(0, 0, 0, 0.2)
		box-shadow -1px 1px 5px rgba(0, 0, 0, 0.2), 0 0 10px rgba(0, 0, 0, 0.1)
		z-index 999
		transition all 1s ease-in-out
	nav
		position absolute
		left 0
		right 0
		bottom 0
		height 45px
		border-top solid 1px #ccc
		background white
		box-shadow 0 0 15px rgba(0, 0, 0, 0.2) inset
		li
			display inline-block
			background white
			height 45px
			margin-top -1px
			line-height 45px
			width 45px
			text-align center
			font-size 14pt
			border-right solid 1px rgba(0, 0, 0, 0.2)
			border-top solid 1px #ccc
			transition all 0.5s ease-in-out
			color rgba(0, 0, 0, 0.4)
			&:hover 
				color rgba(0, 0, 0, 0.7)
			&.active
				border-top solid 1px white
				color #48f
				text-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
	section
		position absolute
		bottom 46px
		top 0
		right 0
		left 0
		overflow hidden
		article
			h1
				padding 15px 0 15px 10px
				display block
				border-bottom solid 1px rgba(0, 0, 0, 0.2)
				font-size 10pt
				margin 0
			position absolute
			border solid 1px rgba(0, 0, 0, 0.2)
			left -1px
			right -1px
			top -1px
			bottom -1px
			overflow auto
			transition all 0.5s ease-in-out
			transform translateX(-110%)
			&.active
				transform none
				~ article
					transform translateX(110%)
			ul
				padding 0
				margin 0
			li, h1, > p
				display block
				border-bottom solid 1px rgba(0, 0, 0, 0.2)
				font-size 10pt
				margin 0
				> *
					margin 15px 0 15px 10px
			input, select, textarea
				display block
				margin 0
				width 248px
				padding 0
				height 35px
				text-indent 25px
				line-height 35px
				border none
				border-top dotted 1px rgba(0, 0, 0, 0.2)
				outline none
				color #48f
			select
				-webkit-appearance none
			img.qrcode
				width 190px
				height 190px
				margin 10px 25px
				padding 5px
				border-radius 100%
				background black
			label
				display block
			#documentlistplaceholder section
				top 49px
				bottom 0
				padding-top 55px
				nav
					bottom auto
					top 0
					border-top none
					border-bottom solid 1px #ccc
					overflow auto
					overflow-y hidden
					height 55px
					.slider
						display block
						width 47px * 6
						height 45px
					li
						display inline-block
						border none 
						border-right solid 1px #ddd
						border-bottom solid 1px #ccc
						float left
						height 45px
						width 45px
						line-height 45px
						padding 0
						margin 0 0 -1px 0
						transition-duration 0.25s
						&:hover
							border-bottom-color #fff
						> *
							margin 0
				article
					position relative
					transform none

	&.open 
		transform none
		aside
			right 0
			box-shadow -2px 0 5px rgba(0, 0, 0, 0.2)

@media (max-width:320px) 
	#appwrapper	#application #sidebar-container > section
		height 100%
		max-height 100%
